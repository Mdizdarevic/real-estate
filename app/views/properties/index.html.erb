<h1 class="h3">Properties</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Seller</th>
      <th>Address</th>
      <th>Price($)</th>
      <th>Rooms</th>
      <th>Bathrooms</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
    <tr>
      <td><%= property.name %></td>
      <td><%= property.address %></td>
      <td><%= property.price %></td>
      <td><%= property.rooms %></td>
      <td><%= property.bathrooms %></td>
      <td><%= link_to "View", property %></td>
      <td><%= link_to "Edit", edit_property_path(property) %></td>
      <td><%= button_to "Delete", property, data: {confirm: "Are you sure?"}, method: :delete, style: "border: none; color: red" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br/>
<%= link_to "New property", new_property_path, class: "btn btn-success" %>
