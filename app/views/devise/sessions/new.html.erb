<div style="background-color: white">
<section class="form-auth text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>

  <h1 class="h3 mb-3 font-weight-normal">Please Log In</h1>
  <label for="inputEmail" class="sr-only">Email address</label>
  <%= f.email_field :email, autofocus: true, class: "form-control", style: "border: solid 2px black; border-radius: 40px", id: "inputEmail", placeholder: "Email address" %>

  <label for="inputPassword" class="sr-only">Password</label>
  <%= f.password_field :password, autocomplete: "current-password", style: "border: solid 2px black; border-radius: 40px", placeholder: "Password", class: "form-control", id: "inputPassword" %>

  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" value="remember-me"> Remember me
    </label>
  </div>
  <button style="border: solid 2px black; border-radius: 40px" class="sign-in btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  <% end %>

<%= render "devise/shared/links" %>
  <p class="mt-5 mb-3 text-muted">Â© 2022</p>
</section>
</div>
